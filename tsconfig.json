{
  "compilerOptions": {
    "incremental": true,
    "target": "ES5",
    "module": "none",
    "sourceMap": true,
    "composite": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "paths": {},
    "esModuleInterop": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "listEmittedFiles": true,
    "noEmit": false,
    "noEmitOnError": true,
    "types": [],
    /*"moduleDetection": "force",*/
    "lib": [
      "ES5",
      "DOM",
      "es2016.array.include",
      "es2019.string",
      "es2019.array",
      "es2019.object",
      "ES2015.Promise"
    ]
  },
  "exclude": [
    "node_modules",
    ".build",
    "nix",
    "**/polyfill.ts",
    "wwwroot"
  ]
}
